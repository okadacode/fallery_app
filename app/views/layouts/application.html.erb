<!DOCTYPE html>
<html>
  <head>
    <title>FalleryApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="flash-<%= message_type %>"><%= message %></div>
      <% end %>
      <% if controller_name == "top_pages" && action_name == "home" || \
            controller_name == "users" &&  action_name == "new" || \
            controller_name == "users" &&  action_name == "create" || \
            controller_name == "sessions" &&  action_name == "new" || \
            controller_name == "sessions" &&  action_name == "create" || \
            controller_name == "password_resets" && action_name == "new" || \
            controller_name == "password_resets" && action_name == "create" %>
        <div class="blank"></div>
        <%= yield %>
      <% else %>
        <div class="content">
          <div class="blank"></div>
          <%= yield %>
        </div>
      <% end %>
    </div>
    <%= render "layouts/sidebar" %>
  </body>
</html>
