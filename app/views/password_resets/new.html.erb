<div class="form-wrapper">
  <h1>Fallery</h1>
  <%= form_for(:password_reset, url: password_resets_path) do |f| %>
    <div class="form-box">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email %>
    </div>

    <div class="btn">
      <%= f.submit "メール送信" %>
    </div>
  <% end %>
</div>
