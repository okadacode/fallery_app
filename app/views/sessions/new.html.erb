<div class="form-wrapper">
  <h1>Fallery</h1>
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-box">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email %>
    </div>

    <div class="form-box">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
    </div>

    <%= f.label :remember_me, class: "checkbox" do %>
      <%= f.check_box :remember_me %>
      <span>ログインを保持する</span>
    <% end %>

    <div class="btn">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</div>
